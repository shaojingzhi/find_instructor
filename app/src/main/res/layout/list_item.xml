<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/item_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/color_white"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="1dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <!--        内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:orientation="horizontal">

                <!--                <ImageView-->
                <!--                    android:id="@+id/head_image"-->
                <!--                    android:layout_width="36dp"-->
                <!--                    android:layout_height="36dp"-->
                <!--                    app:srcCompat="@drawable/touxiang"-->
                <!--                    />-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/head_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:src="@drawable/touxiang" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="30dp"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nick_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"

                        android:clickable="true"

                        android:text="王继良"
                        android:textColor="#FC0B0112"
                        android:textSize="18sp"
                        android:padding="1dp"/>

                    <TextView
                        android:id="@+id/publish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="123669958963"
                        android:textColor="#402A2A"
                        android:textSize="13sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/attention"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/ic_guanzhu"
                    android:clickable="true"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="0dp"
                    android:clickable="true"
                    android:background="@drawable/ic_shanchu"/>

            </LinearLayout>

            <TextView
                android:id="@+id/announcement_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:gravity="center"
                android:text="ANNOUNCEMENT"
                android:textColor="#1B0101"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:singleLine="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#FFE8EDF3"
                android:clickable="false" />

            <TextView
                android:id="@+id/announcement_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:text="招收计算机系学生，有意向与我联系"
                android:textColor="#1B0101"
                android:textSize="17sp"
                android:padding="3dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>